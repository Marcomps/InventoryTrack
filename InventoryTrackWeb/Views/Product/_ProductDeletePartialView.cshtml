@model InventoryTrackWeb.Models.ViewModels.ProductViewModels

<div class="modal fade" id="DeleteProduct-@Model.ProductId" aria-labelledby="DetailsProductLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TitleDelete">Eliminar <b>@Model.ProductName</b></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿ Dese eliminar <b>@Model.ProductName</b> ?</p>
            </div>

            <div class="modal-footer">
                <form asp-action="Delete" asp-route-id="@Model.ProductId">
                    <button type="submit" class="btn btn-danger active">Eliminar</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>